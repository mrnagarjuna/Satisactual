pipeline {
    agent any

    environment {
        // Path to docker-compose if it's not in default PATH
        DOCKER_COMPOSE = "/usr/local/bin/docker-compose"
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Pull the latest code from your Git repository
                git branch: 'main', url: 'https://github.com/mrnagarjuna/Satisactual.git'
            }
        }

        stage('Stop Old Containers') {
            steps {
                // Stop any running containers
                sh 'docker-compose down'
            }
        }

        stage('Build & Deploy') {
            steps {
                // Build Docker images and start containers in detached mode
                sh 'docker-compose up --build -d'
            }
        }

        stage('Check Logs') {
            steps {
                // Optional: print container logs for debugging
                sh 'docker-compose logs -f --tail=50'
            }
        }
    }

    post {
        always {
            echo 'Deployment finished!'
        }
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check the logs above.'
        }
    }
}
